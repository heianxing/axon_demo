<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd">

    <bean class="org.axonframework.integrationtests.commandhandling.StubAggregateCommandHandler">
        <property name="repository" ref="stubAggregateRepository"/>
    </bean>

    <axon:event-sourcing-repository id="stubAggregateRepository" locking-strategy="OPTIMISTIC" event-bus="eventBus"
                                    event-store="eventStore"
                                    aggregate-type="org.axonframework.integrationtests.commandhandling.StubAggregate">
        <axon:snapshotter-trigger event-count-threshold="100" snapshotter-ref="snapshotter"/>
    </axon:event-sourcing-repository>

    <bean id="snapshotter"
          class="org.axonframework.eventsourcing.SpringAggregateSnapshotter">
        <property name="eventStore" ref="eventStore"/>
        <property name="executor">
            <bean class="org.axonframework.util.DirectExecutor"/>
        </property>
    </bean>

</beans>